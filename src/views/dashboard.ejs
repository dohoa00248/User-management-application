<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - User Management</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }
      .navbar-brand {
        font-weight: bold;
      }
      .table thead {
        background-color: #343a40;
        color: white;
      }
      .table td,
      .table th {
        vertical-align: middle;
      }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Admin Dashboard</a>
        <div class="ms-auto d-flex gap-2">
          <a href="/api/v2/user/create-user" class="btn btn-outline-light"
            >+ Create User</a
          >
          <a href="/api/v1/auth/signout" class="btn btn-outline-danger"
            >Sign Out</a
          >
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <h2 class="mb-4">List of Users</h2>
      <% if (users.length === 0) { %>
      <div class="alert alert-info">No users found.</div>
      <% } else { %>
      <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
          <thead>
            <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Password</th>
              <th>Role</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user) => { %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.username %></td>
              <td><%= user.password %></td>
              <td><%= user.role %></td>
              <td><%= user.firstName %></td>
              <td><%= user.lastName %></td>
              <td class="text-center">
                <div class="d-flex justify-content-center gap-2">
                  <a
                    href="/api/v2/user/update/userId/<%= user._id %>"
                    class="btn btn-sm btn-warning"
                    >Edit</a
                  >
                  <a
                    href="/api/v2/user/delete/userId/<%= user._id %>"
                    class="btn btn-sm btn-danger"
                    onclick="return confirm('Are you sure you want to delete this user?')"
                    >Delete</a
                  >
                </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } %>
    </div>
  </body>
</html>
